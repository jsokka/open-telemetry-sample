{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenWeatherApi": {
    "BaseUrl": "https://api.openweathermap.org/data/2.5/",
    "ApiKey": "[from-user-secrets]"
  },
  "Redis": {
    "Configuration": "redis-otel-sample-cache:6379",
    "DefaultExpirationInMinutes": 2
  },
  "Authentication": {
    "ApiBaseUrl": "http://host.docker.internal:5003",
    "TargetApi": "TemperatureApi"
  },
  "Instrumentation": {
    "OtlpExportUrl": "https://otlp.eu01.nr-data.net",
    "ApiKey": "[from-user-secrets]"
  }
}
